CPPFLAGS += -I../leaf/ -I../ex/ -DTASK_DEBUG=0
COMPILE = $(CC) $(CPPFLAGS) $(CFLAGS) $(OPTI_CFLAGS) $(DEBUG_CFLAGS) 

# Make deps from .c file.  Unfortunately, this needs the .h_* files
# before it can parse, so we make those deps explicit.
%.d: %.c Makefile $(GEN)
	set -e; rm -f $@; \
		$(CC) -M $(CPPFLAGS) $< > $@.$$$$; \
		sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
		rm -f $@.$$$$

-include $(SRC:.c=.d)

%.o: %.c Makefile
	$(COMPILE) -o $@ -c $<

$(APP): $(OBJ) $(DEP_OBJ)
	$(CC) -o $(APP) $(OBJ) $(DEP_OBJ)

.PHONY: clean
clean:
	rm -f scheme *.o *.d *.d.* *~ *.h_*
